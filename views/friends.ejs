<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Journal</title>
  <link rel="stylesheet" href="css/style.css">
  <link rel="icon" type="image/x-icon" href="https://badaklibrary.up.railway.app/image.png">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    /* Additional CSS if needed */
    .footer-links a:hover {
      text-decoration: underline;
      color: lightgray;
    }
    .footer {
      background-color: #333;
      padding: 10px;
      width: 100%;
      bottom: 0;
    }
    .profile-picture img {
      max-width: 100px;
      border-radius: 50%;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href="#">Navbar</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse" id="navbarColor02">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="#">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Contact</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">BHARAT</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">About</a>
        </li>
      </ul>
      <form class="form-inline">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Search</button>
      </form>
    </div>
  </nav>

  <!-- Carousel/Banner -->
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="img/Neeraj chauhan.png" alt="First slide">
        <div class="carousel-caption d-none d-md-block">
          <h5>First Slide</h5>
          <p>Description for first slide.</p>
        </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="img/Neeraj chauhan.png" alt="Second slide">
        <div class="carousel-caption d-none d-md-block">
          <h5>Second Slide</h5>
          <p>Description for second slide.</p>
        </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="img/Neeraj chauhan.png" alt="Third slide">
        <div class="carousel-caption d-none d-md-block">
          <h5>Third Slide</h5>
          <p>Description for third slide.</p>
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <!-- Friend Button -->
  <center>
    <button class="neers-friend-button btn btn-primary mt-4">Be Neer's Friend</button>
  </center>

  <!-- Friend List Overlay -->
  <div id="overlays" class="overlays">
    <div class="overlay-content">
      <div class="friend-details">
        <center><h2>Friends list</h2></center>
        <div id="friends" class="friend-container">
          <!-- Friend details will be dynamically populated here -->
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <p>&copy; 2024 Neeraj's Journal. All rights reserved.</p>
        </div>
        <div class="col-md-6">
          <ul class="footer-links">
            <li><a href="#">Privacy Policy</a></li>
            <li><a href="#">Terms of Service</a></li>
            <li><a href="#">Contact</a></li>
          </ul>
        </div>
      </div>
    </div>
  </footer>

  <!-- JavaScript -->
  <script>
    const API_URL = 'https://neer-s-journal.onrender.com';;

    // Fetch Friends Function
    async function fetchFriends() {
      try {
        const response = await fetch('/friends');
        const friends = await response.json();

        const friendsElement = document.getElementById('friends');
        friends.forEach((friend) => {
          const friendDiv = document.createElement('div');
          friendDiv.classList = "about-me-box";
          friendDiv.innerHTML = `
            <center>
              <div class="profile-picture">
                <img src="${friend.profilePicture}" alt="Profile Picture">
              </div>
            </center>
            <div class="details">
              <p><strong>Name:</strong> ${friend.name}</p>
              <p><strong>Country:</strong> ${friend.country}</p>
              <p><strong>Gender:</strong> ${friend.gender}</p>
              <p><strong>Personality:</strong> ${friend.personality}</p>
              <p><strong>Join Date:</strong> ${friend.joinDate}</p>
              <p><strong>Thoughts:</strong> ${friend.thoughts}</p>
            </div>
          `;
          friendsElement.appendChild(friendDiv);
        });
      } catch (error) {
        console.error('Error fetching friends:', error);
      }
    }

    fetchFriends();

    // Redirect when 'Be Neer's Friend' button is clicked
    var button = document.querySelector(".neers-friend-button");
    button.addEventListener('click', () => {
      window.location.href = "friends-form";  // Directly redirect to form page
    });
  </script>

  <!-- Bootstrap and JavaScript -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
